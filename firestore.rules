
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and create chat documents that belong to them.
    // Updates and deletes are disallowed for now to prevent data tampering.
    match /chats/{chatId} {
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
